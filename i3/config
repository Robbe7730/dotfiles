# favourites dmenu
bindsym $mod+Shift+d exec cat ~/.i3/favourites | dmenu | bash - &

# background image
exec --no-startup-id feh --bg-scale /home/robbe/Pictures/background.jpg

# lockscreen
exec --no-startup-id light-locker
bindsym $mod+F4 exec light-locker-command -l

# music control
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# volume management
bindsym XF86AudioRaiseVolume exec /home/robbe/.files/i3/scripts/volumeUp
bindsym XF86AudioLowerVolume exec /home/robbe/.files/i3/scripts/volumeDown
bindsym XF86AudioMute exec /home/robbe/.files/i3/scripts/volumeMute

# brightness management 
bindsym XF86MonBrightnessUp exec /home/robbe/.files/i3/scripts/brightnessUp
bindsym XF86MonBrightnessDown exec /home/robbe/.files/i3/scripts/brightnessDown

